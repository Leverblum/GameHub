<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/catalogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_background"
    android:padding="16dp">

    <!-- Search bar -->
    <EditText
        android:id="@+id/etSearchCatalog"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Buscar en catálogo..."
        android:drawableStart="@drawable/ic_search"
        android:background="@drawable/edittext_background"
        android:paddingStart="12dp" />

    <!-- Filtros / categorías (simple row) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gap="8dp">

            <!-- Example filter chips (simple buttons) -->
            <Button
                android:id="@+id/btnFilterAll"
                style="@style/Widget.GameHub.Button.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Todos" />

            <Button
                android:id="@+id/btnFilterPS"
                style="@style/Widget.GameHub.Button.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="PlayStation"
                android:layout_marginStart="8dp" />

            <!-- Añade más chips según necesites... -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Catálogo (lista) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp" />

</LinearLayout>
