<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/catalogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Search bar -->
    <EditText
        android:id="@+id/etSearchCatalog"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:autofillHints=""
        android:background="@drawable/edittext_background"
        android:drawableStart="@drawable/ic_search"
        android:hint="Buscar en catálogo..."
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <!-- Filtros / categorías (simple row) -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <!--
            CORRECCIÓN: Se eliminó el atributo android:gap="8dp" de este LinearLayout,
            ya que no es válido. El espaciado se controla con márgenes en los elementos hijos.
        -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Example filter chips (simple buttons) -->
            <Button
                android:id="@+id/btnFilterAll"
                style="@style/Widget.GameHub.Button.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Todos" />

            <Button
                android:id="@+id/btnFilterPS"
                style="@style/Widget.GameHub.Button.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:text="PlayStation" />



        </LinearLayout>
    </HorizontalScrollView>

    <!-- Catálogo (lista) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1" />

</LinearLayout>
