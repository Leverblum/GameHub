<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header / Avatar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_transparent_background"
                android:contentDescription="@string/profile_avatar"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_gamepad" />

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/orbitron_bold"
                android:text="John Doe"
                android:textColor="@color/text_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/inter_18pt_regular"
                android:text="john.doe@email.com"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Opciones / Menu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/inter_18pt_regular"
            android:text="Cuenta"
            android:textColor="@color/text_primary" />

        <!-- ===================== INICIO DE LA SECCIÓN CORREGIDA ===================== -->

        <!-- Opción: Editar Perfil -->
        <LinearLayout
            android:id="@+id/option_edit_profile"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_18pt_medium"
                android:text="Editar perfil"
                android:textColor="@color/text_primary" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:rotation="180"
                android:src="@drawable/ic_back"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- Opción: Historial de compras -->
        <LinearLayout
            android:id="@+id/option_order_history"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_catalog"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_18pt_medium"
                android:text="Historial de compras"
                android:textColor="@color/text_primary" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:rotation="180"
                android:src="@drawable/ic_back"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- Opción: Métodos de pago -->
        <LinearLayout
            android:id="@+id/option_payment_methods"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_card"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_18pt_medium"
                android:text="Métodos de pago"
                android:textColor="@color/text_primary" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:rotation="180"
                android:src="@drawable/ic_back"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- Opción: Tiendas cercanas -->
        <LinearLayout
            android:id="@+id/option_stores"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_map_pin"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_18pt_medium"
                android:text="Tiendas cercanas"
                android:textColor="@color/text_primary" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:rotation="180"
                android:src="@drawable/ic_back"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- Opción: Configuración -->
        <LinearLayout
            android:id="@+id/option_settings"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_18pt_medium"
                android:text="Configuración"
                android:textColor="@color/text_primary" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:rotation="180"
                android:src="@drawable/ic_back"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- Opción: Cambiar contraseña -->
        <LinearLayout
            android:id="@+id/option_change_password"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_password"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_18pt_medium"
                android:text="Cambiar contraseña"
                android:textColor="@color/text_primary" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:rotation="180"
                android:src="@drawable/ic_back"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- ===================== FIN DE LA SECCIÓN CORREGIDA ===================== -->

        <!-- Logout -->
        <Button
            android:id="@+id/btnLogout"
            style="@style/Widget.GameHub.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Cerrar sesión"
            android:textColor="@color/error" />

        <!-- Version / space bottom -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="GameHub v1.0"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>
