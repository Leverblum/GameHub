<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profileScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header / Avatar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_gamepad"
                android:contentDescription="@string/profile_avatar"
                android:scaleType="centerCrop"
                android:background="@drawable/badge_background"
                android:padding="8dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="20sp"
                android:fontFamily="@font/orbitron_bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john.doe@email.com"
                android:textSize="14sp"
                android:fontFamily="@font/inter_18pt_regular"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/btnEditProfileShort"
                style="@style/Widget.GameHub.Button.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Editar perfil"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <!-- Opciones / Menu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuenta"
            android:fontFamily="@font/inter_18pt_regular"
            android:textColor="@color/text_primary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <include
            layout="@layout/item_profile_option"
            android:id="@+id/opt_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- Para que sea más claro, uso include con modificaciones vía código si hace falta -->
        <!-- Order history -->
        <LinearLayout
            android:id="@+id/opt_order_history"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_catalog"
                app:tint="@color/text_secondary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Historial de compras"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/inter_18pt_medium"
                android:layout_marginStart="12dp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_back"
                android:rotation="180"
                app:tint="@color/text_secondary"/>
        </LinearLayout>

        <!-- Payment methods -->
        <LinearLayout
            android:id="@+id/opt_payment_methods"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_card"
                app:tint="@color/text_secondary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Métodos de pago"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/inter_18pt_medium"
                android:layout_marginStart="12dp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_back"
                android:rotation="180"
                app:tint="@color/text_secondary"/>
        </LinearLayout>

        <!-- Stores -->
        <LinearLayout
            android:id="@+id/opt_stores"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_map_pin"
                app:tint="@color/text_secondary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tiendas cercanas"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/inter_18pt_medium"
                android:layout_marginStart="12dp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_back"
                android:rotation="180"
                app:tint="@color/text_secondary"/>
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/opt_settings"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/text_secondary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Configuración"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/inter_18pt_medium"
                android:layout_marginStart="12dp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_back"
                android:rotation="180"
                app:tint="@color/text_secondary"/>
        </LinearLayout>

        <!-- Change password -->
        <LinearLayout
            android:id="@+id/opt_change_password"
            style="@style/Profile.OptionRow"
            android:layout_marginBottom="8dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_password"
                app:tint="@color/text_secondary"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cambiar contraseña"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/inter_18pt_medium"
                android:layout_marginStart="12dp"/>
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_back"
                android:rotation="180"
                app:tint="@color/text_secondary"/>
        </LinearLayout>

        <!-- Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="Cerrar sesión"
            android:background="@drawable/btn_logout_background"
            android:textColor="@color/error"
            android:fontFamily="@font/inter_18pt_bold" />

        <!-- Version / space bottom -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GameHub v1.0"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"/>
    </LinearLayout>
</ScrollView>
