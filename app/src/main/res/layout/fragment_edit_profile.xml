<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editProfileScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar perfil"
            android:textSize="20sp"
            android:fontFamily="@font/orbitron_bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/ivAvatarEdit"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_gamepad"
                android:contentDescription="@string/profile_avatar"
                android:scaleType="centerCrop"
                android:background="@drawable/badge_background"/>

        </LinearLayout>

        <!-- Form -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:fontFamily="@font/inter_18pt_regular"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/inter_18pt_regular"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="phone"
            android:fontFamily="@font/inter_18pt_regular"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter_18pt_regular"/>

        <EditText
            android:id="@+id/etDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de nacimiento (dd/mm/aaaa)"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:inputType="date"
            android:fontFamily="@font/inter_18pt_regular"/>

        <Button
            android:id="@+id/btnSaveProfile"
            style="@style/Widget.GameHub.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Guardar cambios"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
