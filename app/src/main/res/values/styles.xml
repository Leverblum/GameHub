<resources>

    <!-- ESTILOS DE TEXTO (TextAppearance) -->
    <style name="TextAppearance.GameHub.H1">
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textSize">24sp</item> <!-- Usa sp para texto -->
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.GameHub.H2">
        <item name="android:fontFamily">@font/orbitron</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.GameHub.Body">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/android:textColorSecondary</item>
    </style>

    <!-- ESTILOS DE WIDGETS (Botones, etc.) -->

    <!-- Botón principal (general para toda la app) -->
    <style name="Widget.GameHub.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/color_primary</item> <!-- En M3 es sin 'android:' -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_18pt_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">12dp</item> <!-- En M3 es sin 'android:' -->
    </style>

    <!-- Botón secundario -->
    <style name="Widget.GameHub.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/inter_18pt_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Reutilizable: fila de opción del perfil -->
    <style name="Profile.OptionRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">?attr/colorSurface</item> <!-- Usa el color del tema -->
    </style>

</resources>
